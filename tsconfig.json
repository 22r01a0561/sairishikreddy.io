{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "lib": [
            "esnext"
        ],
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "NodeNext",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "types": [
            "bun-types",
            "node"
        ], 
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        ".next/types/**/*.ts",
        "app/**/*.{ts,tsx}",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "main/types/**/*.ts",
        "dev/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
